{
	"manifest_version": 2,
	"name": "CustardBox",
	"version": "0.1.0a",
	"author": "Isaac Li",
	"browser_action": {
		"default_popup": "main.html",
		"default_icon": "chat-icon.png",
		"default_title": "CustardBox"
	},
	"permissions": [
		"cookies",
		"storage",
		"activeTab",
		"system.display",
		"<all_urls>"
	],
	"background": {
	    "scripts": [
	    	"background.js"
	    ]
	}
}